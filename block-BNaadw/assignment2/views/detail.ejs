<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <header>
        <a href="/users/signup">signup</a>
        <a href="/users/login">login</a>
        <a href="/users/logout">logout</a>
        <a href="/article">articles</a>
        <a href="/article/new">add article</a>
    </header>
    <main>
        <h2><%= data.title %></h2>
        <p><%= data.description %></p>
        <p><%= data.likes%></p>
        <%if(session) { %>
            <a href="/article/<%= data.slug%>/like">like</a>
       <% } %>
       <% if(!session) { %>
        <a href="/users/login">likes</a>
      <% } %>
      <p><%= data.author%></p>
      <a href="/article/<%= data.slug%>/edit">edit</a>
      <a href="/article/<%= data._id%>/delete">delete</a>
      <%if(session) { %>
        <form action="/article/<%= data._id%>/comment" method="POST">
          <input type="text" placeholder="enter author" name="name">
          <input type="text" name="title" placeholder="enter comemnt">
          <button type="submit">add comment</button>
        </form>
       <% } %>
       <%if(!session) { %>
        <form action="/users/login>" method="GET">
          <input type="text" placeholder="enter author" name="name">
          <input type="text" name="title" placeholder="enter comemnt">
          <button type="submit">submit</button>
        </form>
       <% } %>
       <div>
           <h1>comments</h1>
           <% data.comments.forEach(elem => { %>
               <div>
                   <p> <%= elem.title %> </p>
                   <h2><%= elem.name %></h2>
                   <a href="/comment/<%= elem._id%>/commentlike">like</a>
                   <a href="/comment/<%= elem._id%>/commentedit">edit</a>
                   <a href="/comment/<%= elem._id%>/commentdelete">delete</a>
                </div>
           <%}) %>
       </div>
    </main>
</body>
</html>